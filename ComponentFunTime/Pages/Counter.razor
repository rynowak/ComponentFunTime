@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

    RenderFragment toprow = @<text>Hello from the Counter.</text>;

    [CascadingParameter] public SectionData Sections { get; private set; }

    protected override void OnAfterRender()
    {
        Sections.SetSection("toprow", toprow);
    }
}
